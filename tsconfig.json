{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "useDefineForClassFields": false,
  },
  "include": ["src", "**.*.ts", "src/**/*", "src/prisma", "src/prisma/seed.ts", "src/prisma/index.ts"],
  "exclude": [
    "node_modules",
    "dist",
  ],
}