{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./build",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "#*": ["src/*"]
    },
    "useDefineForClassFields": false,
  },
  "include": ["src", "**.*.ts", "src/prisma", "src/prisma/seed.ts", "src/prisma/index.ts"],
  "exclude": [
    "node_modules",
    "build",
  ],
}